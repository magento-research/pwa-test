<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="GoToCartPage">
        <amOnPage url="{{Cart.url}}" stepKey="goToCartPage"/>
        <wait time="5" stepKey="temporaryStaticWait1" />
    </actionGroup>

    <actionGroup name="RemoveItemFromTheCartPage">
        <arguments>
            <argument name="product" defaultValue="ValeriaTwoLayerTank"/>
        </arguments>
        <click selector="{{CartPageKebabSection.kebabMenu(product.name)}}" stepKey="clickOnKebabMenu"/>
        <wait time="3" stepKey="wait123"/>
        <waitForPwaElementVisible selector="{{CartPageKebabSection.removeItem}}" stepKey="waitForKebabMenuToExpand"/>
        <click selector="{{CartPageKebabSection.removeItem}}" stepKey="clickOnRemoveItem"/>
        <wait time="10" stepKey="wait1234"/>
        <see userInput="There are no items in your cart." stepKey="seeEmptyCartText"/>
        <dontSee userInput="{{product.name}}" stepKey="dontSeeProductInCart" />
        <seeElement selector="{{VeniaCartPageSection.signIn}}" stepKey="checkForSignInButton" />
        <dontSee userInput="Proceed to Checkout" stepKey="dontSeeCheckoutButton" />
        <dontSee userInput="Estimate your Shipping" stepKey="dontSeeShippingAccordion" />
    </actionGroup>

    <actionGroup name="VerifyConfigurableProductExists">
        <arguments>
            <argument name="product" defaultValue="ValeriaTwoLayerTank"/>
        </arguments>
        <seeElement selector="{{CartPageKebabSection.kebabMenu(product.name)}}" stepKey="assertKebabMenuExists"/>
        <seeElement selector="{{CartPageProductDetailsSection.cartProductName(product.name)}}" stepKey="assertProductNameExists"/>
        <seeElement selector="{{CartPageProductDetailsSection.colorOption(product.name, product.color)}}" stepKey="assertProductColorExists"/>
        <seeElement selector="{{CartPageProductDetailsSection.sizeOption(product.name, product.color, product.size)}}" stepKey="assertProductSizeExists"/>
        <seeElement selector="{{CartPageProductDetailsSection.productQty(product.name, product.qty)}}" stepKey="assertProductQty"/>
        <seeElement selector="{{CartPageProductDetailsSection.productPrice(product.name, product.price)}}" stepKey="assertProductPrice"/>
    </actionGroup>


    <actionGroup name="addShippingMethod">
        <arguments>
            <argument name="customer" defaultValue="VeniaCustomer1"/>
        </arguments>
        <click selector="{{CartPageShippingSection.shippingAccordion}}" stepKey="expandShippingAccordion"/>
        <wait time="2" stepKey="wait1"/>
        <click selector="{{CartPageShippingSection.estimateShippingLink}}" stepKey="clickEstimateShippingLink"/>
        <wait time="2" stepKey="wait2"/>
        <selectOption selector="{{CartPageShippingSection.selectState}}" userInput="{{customer.stateName}}" stepKey="selectState"/>
        <wait time="2" stepKey="wait3"/>
        <fillField  selector="{{CartPageShippingSection.zipCode}}" userInput="{{customer.zipCode}}" stepKey="enterZipCode"/>
        <wait time="1" stepKey="wait4"/>
        <click selector="{{CartPageShippingSection.getShippingOptions}}" stepKey="getShippingOptions"/>
        <wait time="5" stepKey="wait5"/>
        <seeElement selector="{{CartPageShippingSection.shippingMethodFixed}}" stepKey="verifyFlatRateShipping"/>
        <see userInput="Estimated Shipping" stepKey="seeShippingMethodInPriceSummary"/>
    </actionGroup>

    <actionGroup name="addCouponCode">
        <arguments>
            <argument name="discount" defaultValue="CartPromotion"/>
        </arguments>
        <click selector="{{CartPageCouponCodeSection.couponCodeAccordion}}" stepKey="expandCouponAccordion"/>
        <wait time="2" stepKey="wait1"/>
        <fillField  selector="{{CartPageCouponCodeSection.couponCode}}" userInput="{{discount.CouponCode}}" stepKey="enterZipCode"/>
        <wait time="1" stepKey="wait4"/>
        <click selector="{{CartPageCouponCodeSection.applyCoupon}}" stepKey="applyCouponCode"/>
        <wait time="5" stepKey="wait5"/>
        <seeElement selector="{{CartPageCouponCodeSection.removeCoupon}}" stepKey="verifyRemoveCodeLink"/>
        <see userInput="{{discount.CouponCode}}" stepKey="seeAppliedCouponCode"/>
        <see userInput="Discounts applied" stepKey="seeAppliedDiscountLabel"/>
    </actionGroup>

    <actionGroup name="NavigateToSignInFormFromCart">
        <waitForPwaElementVisible selector="{{VeniaCartPageSection.signIn}}" stepKey="wait1"/>
        <click selector="{{VeniaCartPageSection.signIn}}" stepKey="clickSignInOnCartPage"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.signIn}}" stepKey="wait2"/>
        <wait time="3" stepKey="wait3"/>
        <click selector="{{VeniaMainMenuSection.signIn}}" stepKey="clickSignInOnLeftPanel"/>
    </actionGroup>

    <actionGroup name="VerifySimpleProductExists">
        <arguments>
            <argument name="product" defaultValue="CarminaEarrings"/>
        </arguments>
        <seeElement selector="{{CartPageKebabSection.kebabMenu(product.name)}}" stepKey="assertKebabMenuExists"/>
        <seeElement selector="{{CartPageProductDetailsSection.cartProductName(product.name)}}" stepKey="assertProductNameExists"/>
        <seeElement selector="{{CartPageProductDetailsSection.productQty(product.name, product.qty)}}" stepKey="assertProductQty"/>
        <seeElement selector="{{CartPageProductDetailsSection.productPrice(product.name, product.price)}}" stepKey="assertProductPrice"/>
    </actionGroup>

    <actionGroup name="addGiftCard">
        <arguments>
            <argument name="discount" defaultValue="CartPromotion"/>
        </arguments>
        <click selector="{{CartPageGiftCardSection.giftCardAccordion}}" stepKey="expandGiftCardAccordion"/>
        <wait time="2" stepKey="wait1"/>
        <fillField  selector="{{CartPageGiftCardSection.giftCardCode}}" userInput="{{discount.GiftCard}}" stepKey="enterGiftCardCode"/>
        <wait time="1" stepKey="wait4"/>
        <click selector="{{CartPageGiftCardSection.applyGiftCard}}" stepKey="applyCouponCode"/>
        <wait time="5" stepKey="wait5"/>
        <seeElement selector="{{CartPageGiftCardSection.removeGiftCard}}" stepKey="verifyRemoveGiftCardLink"/>
        <seeElement selector="{{CartPageGiftCardSection.giftCardBalance}}" stepKey="assertGiftCardBalanceLabel"/>
        <seeElement selector="{{CartPageGiftCardSection.addAnotherGiftCard}}" stepKey="assertAddAnotherGiftCardLink"/>
        <see userInput="{{discount.GiftCard}}" stepKey="seeAppliedGiftCard"/>
        <see userInput="Gift Card(s) applied" stepKey="seeAppliedGiftCardLabel"/>
    </actionGroup>

</actionGroups>
