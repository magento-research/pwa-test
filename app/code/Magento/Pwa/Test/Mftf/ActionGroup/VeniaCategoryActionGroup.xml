<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="OpenProductFromCategoryPage">
        <arguments>
            <argument name="productName" type="string"/>
            <argument name="categoryName" type="string"/>
        </arguments>

        <click selector="{{productName}}" stepKey="clickOnProductImage1"/>
        <waitForPwaElementNotVisible selector="{{VeniaStorefrontSection.productImage(categoryName)}}" stepKey="waitForPwaElementNotVisible1"/>
        <waitForPwaElementVisible selector="{{VeniaProductSection.productName}}" stepKey="waitForPwaElementVisible1"/>
        <wait time="5" stepKey="temporaryStaticWait1" />
        <seeElement selector="{{VeniaProductSection.productName}}" stepKey="assertProductIsVisible1"/>
    </actionGroup>

    <actionGroup name="OpenStorefrontCategoryByName">
        <arguments>
            <argument name="categoryName" defaultValue="ShopTheLook"/>
        </arguments>
        <click userInput="{{categoryName.name}}" stepKey="clickOnCategoryName1"/>
        <waitForPwaElementNotVisible selector="{{VeniaStorefrontSection.productImage(categoryName.name)}}"  stepKey="waitForPwaElementNotVisible01"/>
    </actionGroup>

    <actionGroup name="OpenMainMenuCategoryByName">
        <arguments>
            <argument name="categoryName" defaultValue="ShopTheLook"/>
        </arguments>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.navTrigger}}" stepKey="wait1"/>
        <click selector="{{VeniaMainMenuSection.navTrigger}}" stepKey="expandNav"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.categoryByName(categoryName.name)}}" stepKey="wait2"/>
        <wait time="2" stepKey="temporaryStaticWait"/>
        <click selector="{{VeniaMainMenuSection.categoryByName(categoryName.name)}}" stepKey="clickOnCategoryName1"/>
    </actionGroup>

    <actionGroup name="OpenMainMenuSubCategoryByName">
        <arguments>
            <argument name="categoryName" defaultValue="ShopTheLook"/>
        </arguments>
        <wait time="5" stepKey="temporaryStaticWait"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.categoryByName(categoryName.subCatName)}}" stepKey="wait3"/>
        <click selector="{{VeniaMainMenuSection.categoryByName(categoryName.subCatName)}}" stepKey="clickOnCategoryName2"/>
        <waitForPwaElementNotVisible selector="{{VeniaStorefrontSection.productImage(categoryName.subCatName)}}"  stepKey="waitForPwaElementNotVisible01"/>
    </actionGroup>

    <actionGroup name="AssertProductDisplay">
        <arguments>
            <argument name="categoryDisplayName" type="string"/>
        </arguments>
        <wait time="5" stepKey="temporaryStaticWait"/>
        <seeElement selector="{{VeniaCategorySection.categoryTitle(categoryDisplayName)}}" stepKey="assertcategoryTitleexists"/>
        <seeElement selector="{{VeniaCategorySection.filterButton}}" stepKey="assertFilterButtonExists"/>
        <seeElement selector="{{VeniaCategorySection.sortButton}}" stepKey="assertSortButtonExists"/>
        <seeElement selector="{{VeniaCategorySection.galleryItems}}" stepKey="assertProductContainerExists"/>
    </actionGroup>


</actionGroups>
