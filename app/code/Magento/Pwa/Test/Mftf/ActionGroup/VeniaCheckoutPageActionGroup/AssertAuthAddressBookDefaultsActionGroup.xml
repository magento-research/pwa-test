<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertAuthAddressBookDefaults">
        <seeElement selector="{{CheckoutPageAuthUserChangeShippingSection.addressBookRoot}}" stepKey="assertChangeShippingRootExists"/>
        <seeElement selector="{{CheckoutPageAuthUserChangeShippingSection.cancelAddressChange}}" stepKey="assertCancelButtonExists"/>
        <seeElement selector="{{CheckoutPageAuthUserChangeShippingSection.applyAddressChange}}" stepKey="assertAddButtonExists"/>
        <seeElement selector="{{CheckoutPageAuthUserChangeShippingSection.addressBookSelectedRoot}}" stepKey="assertSelectedAddressExists"/>
        <seeElement selector="{{CheckoutPageAuthUserChangeShippingSection.addNewAddress}}" stepKey="assertAddNewAddressLinkExists"/>
        <seeElement selector="{{CheckoutPageAuthUserChangeShippingSection.editAddress}}" stepKey="assertAddressEditLinkExists"/>
    </actionGroup>
</actionGroups>
