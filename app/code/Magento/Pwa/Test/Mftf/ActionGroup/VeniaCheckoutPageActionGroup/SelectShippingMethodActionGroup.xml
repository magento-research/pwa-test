<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SelectShippingMethod">
        <arguments>
            <argument name="shippingMethod" defaultValue="{{ShippingMethods.fixedShippingCode}}" type="string"/>
        </arguments>
        <click selector="{{CheckoutPageSelectShippingMethodSection.shippingMethodSelect(shippingMethod)}}" stepKey="selectShippingMethod"/>
    </actionGroup>
</actionGroups>
