<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SetProductColorAndSizeAndQuantityOptions">
        <arguments>
            <argument name="product" defaultValue="ValeriaTwoLayerTank"/>
        </arguments>
        <wait time="5" stepKey="wait123"/>
        <waitForPwaElementVisible selector="{{VeniaProductSection.productColorByValue(product.color)}}" stepKey="waitFOrProducttoDisplay"/>
        <click selector="{{VeniaProductSection.productColorByValue(product.color)}}" stepKey="clickOnColorOption01"/>
        <click selector="{{VeniaProductSection.productSizeByValue(product.size)}}" stepKey="clickOnSizeOption01"/>
        <selectOption selector="{{VeniaProductSection.productQuantity}}" userInput="{{product.qty}}" stepKey="selectProductQuantity01"/>
    </actionGroup>

    <actionGroup name="AddToCart">
        <arguments>
            <argument name="product" defaultValue="ValeriaTwoLayerTank"/>
        </arguments>
        <waitForPwaElementVisible selector="{{VeniaProductSection.addToCart}}" stepKey="waitForAddToCartButtonToBeReady"/>
        <click selector="{{VeniaProductSection.addToCart}}" stepKey="clickAddToCart1"/>
        <wait time="10" stepKey="wait1134" />
        <waitForPwaElementVisible selector="{{VeniaShoppingCartIconSection.shoppingCartCounter}}" stepKey="waitForShoppingCartToUpdate"/>
        <seeElement selector="{{VeniaShoppingCartIconSection.shoppingCartCounter}}" stepKey="assertElementExists"/>
        <dontSeeElement selector="{{VeniaShoppingCartIconSection.shoppingCartIcon}}" stepKey="assertEmptyCartDoesNotExists"/>
    </actionGroup>

    <actionGroup name="GoToProductDetailsPage">
        <arguments>
            <argument name="product" defaultValue="ValeriaTwoLayerTank"/>
        </arguments>
        <amOnPage url="{{product.url}}" stepKey="goToVeniaProductDetailsPage"/>
        <waitForPwaElementVisible selector="{{VeniaProductSection.productName}}" stepKey="waitForPwaElementVisible1"/>
    </actionGroup>

</actionGroups>
