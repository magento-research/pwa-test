<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AddToCart">
        <arguments>
            <argument name="product" defaultValue="ValeriaTwoLayerTank"/>
        </arguments>
        <waitForPwaElementVisible selector="{{VeniaProductSection.addToCart}}" stepKey="waitForAddToCartButtonToBeReady"/>
        <click selector="{{VeniaProductSection.addToCart}}" stepKey="clickAddToCart1"/>
        <wait time="10" stepKey="wait1134"/>
        <waitForPwaElementVisible selector="{{VeniaMiniCartIconSection.miniCartCounter(product.qty)}}" stepKey="waitForShoppingCartToUpdate"/>
        <seeElement selector="{{VeniaMiniCartIconSection.miniCartCounter(product.qty)}}" stepKey="assertElementExists"/>
    </actionGroup>
</actionGroups>
