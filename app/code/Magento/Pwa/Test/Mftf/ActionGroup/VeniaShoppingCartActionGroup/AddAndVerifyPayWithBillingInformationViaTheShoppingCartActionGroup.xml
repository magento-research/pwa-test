<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AddAndVerifyPayWithBillingInformationViaTheShoppingCart">
        <arguments>
            <argument name="paymentMethodName" defaultValue="Check / Money order" type="string"/>
        </arguments>

        <click selector="{{VeniaShoppingCartDetailsSection.addBillingInformation}}" stepKey="clickOnAddBillingInformation01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartPayWithSection.paymentMethod}}" stepKey="waitForPayWithTitleToAppear01"/>
        <selectOption userInput="{{paymentMethodName}}" selector="{{VeniaShoppingCartPayWithSection.paymentMethod}}" stepKey="selectPaymentMethod01"/>
        <click selector="{{VeniaShoppingCartPayWithSection.save}}" stepKey="clickOnSave02"/>
        <waitForPwaElementNotVisible selector="{{VeniaShoppingCartPayWithSection.paymentMethod}}" stepKey="waitForPaymentMethodNotVisible01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartDetailsSection.payWithMainArea}}" stepKey="waitForPayWithAreaVisible01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartDetailsSection.getItByMainArea}}" stepKey="waitForGetItByAreaVisible01"/>
        <wait time="5" stepKey="temporaryWait"/>
        <seeElement selector="{{VeniaShoppingCartDetailsSection.payWithMainArea}}" stepKey="checkForPayWithAreaVisible01"/>
    </actionGroup>
</actionGroups>
