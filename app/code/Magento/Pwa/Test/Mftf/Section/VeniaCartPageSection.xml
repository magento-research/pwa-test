<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="VeniaCartPageSection">
        <element name="cartHeader" type="text" selector="//h1[contains(text(), 'Cart')]"/>
        <element name="emptyCartMessage" type="text" selector="//h3[contains(text(), 'There are no items in your cart.')]"/>
        <element name="signIn" type="button" selector="//button[contains(@class, 'cartPage-sign_in')]/span[contains(text(), 'Sign In')]"/>
        <element name="checkout" type="button" selector="//button[contains(@class, 'button-root_highPriority-')]/span[contains(text(), 'Proceed to Checkout')]"/>
    </section>

    <section name="CartPageShippingSection">
        <element name="shippingAccordion" type="button" selector="//button[contains(@class, 'section-title_container-')]//span[contains(text(), 'Estimate your Shipping')]"/>
        <element name="estimateShippingLink" type="button" selector="//span[contains(text(), 'I want to estimate my shipping')]"/>
        <element name="getShippingOptions" type="button" selector="//span[contains(text(), 'Get Shipping Options')]"/>
        <element name="zipCode" type="input" selector="[class*='textInput-input-'][name*='zip']"/>
        <element name="selectState" type="select" selector="[class*='select-input-'][name*='region']"/>
        <element name="shippingMethodFixed" type="radio" selector="//input[contains(@class, 'radio-input-')][contains(@value, 'flatrate')]"/>
    </section>

    <section name="CartPageCouponCodeSection">
        <element name="couponCodeAccordion" type="button" selector="//button[contains(@class, 'section-title_container-')]//span[contains(text(), 'Enter Coupon Code')]"/>
        <element name="couponCode" type="input" selector="[id='couponCode']"/>
        <element name="applyCoupon" type="button" selector="//button[contains(@class, 'couponCode-applyButton-')]/span[contains(text(), 'Apply')]"/>
        <element name="removeCoupon" type="button" selector="//button[contains(@class, 'couponCode-removeButton-')][contains(text(), 'Remove')]"/>
    </section>

    <section name="CartPageGiftCardSection">
        <element name="giftCardAccordion" type="button" selector="//button[contains(@class, 'section-title_container-')]//span[contains(text(), 'Apply Gift Card')]"/>
        <element name="giftCardCode" type="input" selector="[id*='giftCards-card-']"/>
        <element name="applyGiftCard" type="button" selector="//button[contains(@class, 'giftCards-apply_button-')]/span[contains(text(), 'Apply')]"/>
        <element name="removeGiftCard" type="button" selector="//button[contains(@class, 'giftCard-remove-')][contains(text(), 'Remove')]"/>
        <element name="giftCardBalance" type="text" selector="//span[contains(@class, 'giftCard-balance-')]" />
        <element name="giftCardBalanceLink" type="button" selector="//button[contains(@class, 'giftCards-check_balance_button')]" />
        <element name="addAnotherGiftCard" type="button" selector="//button[contains(@class, 'giftCards-show_entry-')][contains(text(), '+ Add another gift card')]"/>
    </section>

    <section name="CartPageGiftOptionsSection">
        <element name="giftOptionsAccordion" type="button" selector="//button[contains(@class, 'section-title_container-')]//span[contains(text(), 'See Gift Options')]"/>
        <element name="includeGiftReceipt" type="input" selector="//span[contains(text(), 'Include gift receipt')]"/>
        <element name="includePrintedCard" type="input" selector="//span[contains(text(), 'Include printed card')]"/>
        <element name="addGiftMessage" type="textarea" selector="[id='cardMessage']"/>
    </section>

    <section name="CartPageProductDetailsSection">
        <element name="cartProductName" type="text" selector="//span[contains(text(), '{{var_product_name}}')]" parameterized="true"/>
        <element name="colorOption" type="button" selector="//li[./div/span[contains(text(), '{{product_name}}')]]//dl/dt[contains(., '{{product_color}}')]" parameterized="true"/>
        <element name="sizeOption" type="button" selector="//li[./div/span[contains(text(), '{{product_name}}')]]//dl/dt[contains(., '{{product_color}}')]/following-sibling::dt[contains(., '{{product_size}}')]" parameterized="true"/>
        <element name="productQty" type="input" selector="//li[./div/span[contains(text(), '{{product_name}}')]]//input[@name='quantity'][@value='{{product_qty}}']" parameterized="true"/>
        <element name="productPrice" type="input" selector="//li[./div/span[contains(text(), '{{product_name}}')]]//span[contains(text(), '{{product_price}}')]" parameterized="true"/>
    </section>


    <section name="CartPageKebabSection">
        <element name="kebabMenu" type="button" selector="//li[./div/span[contains(text(), '{{product_name}}')]]//button[contains(@class, 'kebab-kebab-')]" parameterized="true"/>
        <element name="editItem" type="button" selector="(//*[contains(@class, 'kebab-dropdown_active-')]/*[contains(@class, 'section-menuItem-')])[2]"/>
        <element name="removeItem" type="button" selector="(//*[contains(@class, 'kebab-dropdown_active-')]/*[contains(@class, 'section-menuItem-')])[3]"/>
    </section>

    <section name="EditPanelSection">
        <element name="updateCart" type="button" selector="//span[contains(text(), 'Update')]"/>
        <element name="colorByValue" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//button[contains(@title,'{{var1}}')]" parameterized="true"/>
        <element name="sizeByValue" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//*[contains(@class, 'tileList-root-')]//span[contains(text(), '{{var1}}')]" parameterized="true"/>
        <element name="quantity" type="input" selector="//aside[contains(@class, 'editModal-root_open-')]//input[contains(@name,'quantity')]"/>
        <element name="productOptionByValue" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//*[contains(@class, 'tileList-root-')]//span[contains(text(), '{{var1}}')]" parameterized="true"/>
        <element name="increaseQtyStepper" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//button[contains(@aria-label,'Increase Quantity')]"/>
        <element name="decreaseQtyStepper" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//button[contains(@aria-label,'Decrease Quantity')]"/>
    </section>

</sections>
