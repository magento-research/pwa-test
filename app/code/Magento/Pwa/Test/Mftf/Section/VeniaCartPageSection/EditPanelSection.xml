<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="EditPanelSection">
        <element name="updateCart" type="button" selector="//span[contains(text(), 'Update')]"/>
        <element name="colorByValue" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//button[contains(@title,'{{var1}}')]" parameterized="true"/>
        <element name="sizeByValue" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//*[contains(@class, 'tileList-root-')]//span[contains(text(), '{{var1}}')]" parameterized="true"/>
        <element name="quantity" type="input" selector="//aside[contains(@class, 'editModal-root_open-')]//input[contains(@name,'quantity')]"/>
        <element name="productOptionByValue" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//*[contains(@class, 'tileList-root-')]//span[contains(text(), '{{var1}}')]" parameterized="true"/>
        <element name="increaseQtyStepper" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//button[contains(@aria-label,'Increase Quantity')]"/>
        <element name="decreaseQtyStepper" type="button" selector="//aside[contains(@class, 'editModal-root_open-')]//button[contains(@aria-label,'Decrease Quantity')]"/>
    </section>
</sections>
