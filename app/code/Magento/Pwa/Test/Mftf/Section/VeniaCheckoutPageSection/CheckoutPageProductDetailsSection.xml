<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="CheckoutPageProductDetailsSection">
        <element name="productName" type="text" selector="//div[contains(@class, 'item-root-')]//span[contains(text(), '{{product_name}}')]" parameterized="true"/>
        <element name="colorOption" type="text" selector="//div[./div/span[contains(text(), '{{product_name}}')]]//dl/dt[contains(., '{{product_color}}')]" parameterized="true"/>
        <element name="sizeOption" type="text" selector="//div[./div/span[contains(text(), '{{product_name}}')]]//dl/dt[contains(., '{{product_color}}')]/following-sibling::dt[contains(., '{{product_size}}')]" parameterized="true"/>
        <element name="productQty" type="input" selector="//div[./div/span[contains(text(), '{{product_name}}')]]//span[contains(text(), 'Qty : {{product_qty}}')]" parameterized="true"/>
    </section>
</sections>
