<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">

    <section name="VeniaMainMenuSection">
        <element name="mainArea" type="textarea" selector="[class*='navigation-root_open-']"/>
        <element name="back" type="button" selector="(//*[contains(@class, 'navigation-header-')]//*[contains(@class, 'trigger-root-')])[1]"/>
        <element name="close" type="button" selector="(//*[contains(@class, 'navigation-header-')]//*[contains(@class, 'trigger-root-')])[2]"/>
        <element name="categoryByName" type="button" selector="//*[contains(@class, 'categoryLeaf-text-')][contains(text(), '{{var1}}')]" parameterized="true"/>
        <element name="signIn" type="button" selector="[class*='navigation-authBar-'] [class*='highPriority']"/>
        <element name="navTrigger" type="button" selector="button[class^=navTrigger-root]"/>
        <element name="userChip" type="block" selector="div[class^=navigation-userChip]"/>
    </section>
    
    <section name="VeniaMainMenuSignInSection">
        <element name="mainArea" type="textarea" selector="[class*='navigation-signIn_open-']"/>
        <element name="email" type="input" selector="[class*='navigation-signIn'] input[name='email']"/>
        <element name="password" type="input" selector="[class*='navigation-signIn'] input[name='password']"/>
        <element name="signIn" type="button" selector="[class*='signIn-signInButton-'] button"/>
        <element name="forgotUsernamePassword" type="button" selector="[class*='signIn-forgotPassword-']"/>
        <element name="createAnAccount" type="button" selector="div[class^='signIn-showCreateAccountButton'] button"/>
    </section>

    <section name="VeniaMainMenuForgotPasswordSection">
        <element name="mainArea" type="textarea" selector="[class*='forgotPasswordForm-form-']"/>
        <element name="message" type="text" selector="[class*='forgotPassword-instructions-']"/>
        <element name="email" type="input" selector="[class*='forgotPasswordForm-root-'] input[name='email']"/>
        <element name="submit" type="button" selector="[class*='forgotPasswordForm-buttonContainer-'] button"/>
        <element name="successMessage" type="text" selector="p[class*='formSubmissionSuccessful-text-']" />
    </section>

    <section name="VeniaMainMenuCreateAccountSection">
        <element name="mainArea" type="textarea" selector="[class*='createAccount-root-']"/>
        <element name="message" type="text" selector="[class*='createAccount-lead-']"/>
        <element name="email" type="input" selector="input[name='customer.email']"/>
        <element name="firstName" type="input" selector="input[name='customer.firstname']"/>
        <element name="lastName" type="input" selector="input[name='customer.lastname']"/>
        <element name="password" type="input" selector="input[autocomplete='new-password']"/>
        <element name="confirmPassword" type="input" selector="input[name='confirm']"/>
        <element name="submit" type="button" selector="[class*='createAccount-actions-'] button"/>
    </section>


    <section name="VeniaMainMenuUserAccountSection">
        <element name="userInfoRoot" type="text" selector="div[class*='userInformation-userInformationContainer']"/>
        <element name="userInfoMore" type="button" selector="[class*='myAccountMenuTrigger-userMore-']"/>
        <element name="signOut" type="button" selector="[class*='myAccountMenu-signOutTitle-']" />
    </section>

</sections>
