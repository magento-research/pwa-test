<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="VeniaShoppingCartEditSection">
        <element name="updateCart" type="button" selector="//span[contains(text(), 'Update Cart')]"/>
        <element name="colorByValue" type="button" selector="//aside[contains(@class, 'miniCart-root_open-')]//button[contains(@title,'{{var1}}')]" parameterized="true"/>
        <element name="sizeByValue" type="button" selector="//aside[contains(@class, 'miniCart-root_open-')]//*[contains(@class, 'tileList-root-')]//span[contains(text(), '{{var1}}')]" parameterized="true"/>
        <element name="quantity" type="select" selector="//aside[contains(@class, 'miniCart-root_open-')]//select[contains(@class,'select-input-')]"/>
        <element name="productOptionByValue" type="button" selector="//aside[contains(@class, 'miniCart-root_open-')]//*[contains(@class, 'tileList-root-')]//span[contains(text(), '{{var1}}')]" parameterized="true"/>
    </section>
</sections>
