<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="RegisteredUserCheckoutWithMultipleProducts" extends="CreateConfigurableProduct">
        <annotations>
            <features value="PWA"/>
            <stories value="Checkout"/>
            <title value="Verify registered user should be able to checkout with Multiple products."/>
            <description value="Verify registered user should be able to checkout with Multiple products."/>
            <severity value="CRITICAL"/>
            <testCaseId value="MC-15720"/>
            <group value="PWA"/>
        </annotations>

        <before>
            <!--Create Customer-->
            <createData entity="Simple_US_Customer" stepKey="createCustomer"/>

            <!--Create Simple Product and category-->
            <createData entity="SimpleSubCategory" stepKey="createCategory1"/>
            <createData entity="SimpleProduct" stepKey="createSimpleProduct">
                <requiredEntity createDataKey="createCategory1"/>
            </createData>

            <createData entity="SimpleProduct3" stepKey="createSimpleProduct1">
                <requiredEntity createDataKey="createCategory1"/>
            </createData>

            <actionGroup ref="GoToVeniaDesktopStorefront" stepKey="goToVeniaDesktopStorefront1"/>

            <actionGroup ref="NavigateToSignInForm" stepKey="navigateToSignInFOrm" />

            <actionGroup ref="SignIn" stepKey="enterEmailForAccount">
                <argument name="email" value="$$createCustomer.email$$"/>
                <argument name="pwd" value="$$createCustomer.password$$"/>
            </actionGroup>

            <actionGroup ref="GoToProductDetailsPage" stepKey="goToProductDetailsPage"/>

            <actionGroup ref="SetProductConfigOptions" stepKey="selectProductOptionAndQty"/>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad"/>

            <actionGroup ref="AddToCart" stepKey="addToCart1"/>

            <actionGroup ref="GoToProductDetailsPage" stepKey="goToProductDetailsPage1">
                <argument name="product" value="SimpleProduct"/>
            </actionGroup>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad11"/>

            <actionGroup ref="AddToCart" stepKey="addToCart2"/>

            <actionGroup ref="GoToProductDetailsPage" stepKey="goToProductDetailsPage2">
                <argument name="product" value="SimpleProduct3"/>
            </actionGroup>

            <selectOption selector="{{VeniaProductSection.productQuantity}}" userInput="3" stepKey="selectProductQuantity1"/>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad1"/>

            <actionGroup ref="AddToCart" stepKey="addToCart3"/>

            <actionGroup ref="TemporaryWait5" stepKey="waitForElementToLoad5"/>

            <actionGroup ref="ProceedToCheckout" stepKey="ProceedToCheckout1"/>

            <actionGroup ref="AddAndVerifyShipToShippingInformationViaTheShoppingCart" stepKey="addAndVerifyShipToInfo1"/>

            <click selector="{{VeniaShoppingCartDetailsSection.addBillingInformation}}" stepKey="clickOnAddBillingInformation01"/>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad2"/>

            <actionGroup ref="EnterCardDetails" stepKey="enterCreditCardDetails"/>

            <actionGroup ref="SubmitPayment" stepKey="submitPaymentMethod"/>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad3"/>

            <waitForPwaElementVisible selector="{{VeniaShoppingCartDetailsSection.payWithMainArea}}" stepKey="waitForPayWithAreaVisible01"/>

            <actionGroup ref="AddGetItByShippingInformationViaTheShoppingCart" stepKey="addGetItByShippingInformationViaTheShoppingCart1">
                <argument name="shippingMethodName" value="Flat Rate"/>
            </actionGroup>

        </before>

        <after>
            <!-- Delete created entity -->
            <deleteData createDataKey="createCustomer" stepKey="deleteCustomer"/>
            <deleteData createDataKey="createCategory1" stepKey="deleteCategory1"/>
            <deleteData createDataKey="createSimpleProduct" stepKey="deleteSimpleProduct"/>
            <deleteData createDataKey="createSimpleProduct1" stepKey="deleteSimpleProduct1"/>
        </after>

        <actionGroup ref="ConfirmOrderRegisteredUser" stepKey="clickConfirmOrderButtonForRegisteredUser"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartSection.close}}" stepKey="wait10"/>
        <wait time="2" stepKey="temporarywait11"/>
        <click selector="{{VeniaShoppingCartSection.close}}" stepKey="clickOnCloseIconOfCart"/>
        <wait time="2" stepKey="temporarywait12"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.navTrigger}}" stepKey="wait1"/>
        <click selector="{{VeniaMainMenuSection.navTrigger}}" stepKey="expandNav"/>
        <actionGroup ref="SignOut" stepKey="signOutFromTheAccount"/>

    </test>
</tests>
