<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="RegisteredUserCheckoutWithMultipleProducts">
        <annotations>
            <features value="PWA"/>
            <stories value="Guest Checkout"/>
            <title value="Verify guest user should be able to checkout with Multiple products."/>
            <description value="Verify guest user should be able to checkout with Multiple products."/>
            <severity value="CRITICAL"/>
            <testCaseId value="MC-34054"/>
            <group value="PWA"/>
            <skip>
                <issueId value="PWA-236"/>
            </skip>
        </annotations>

        <before>

            <actionGroup ref="GoToVeniaDesktopStorefront" stepKey="goToVeniaDesktopStorefront1"/>
            <actionGroup ref="NavigateToSignInForm" stepKey="navigateToSignInFOrm" />
            <actionGroup ref="SignIn" stepKey="enterEmailForAccount">
                <argument name="Customer" value="VeniaRegisteredCustomer"/>
            </actionGroup>
            <actionGroup ref="AssertSuccessfulSignIn" stepKey="assertUserSignIn">
                <argument name="Customer" value="VeniaRegisteredCustomer"/>
            </actionGroup>

            <actionGroup ref="GoToProductDetailsPage" stepKey="goToProductDetailsPage">
                <argument name="product" value="ValeriaTwoLayerTank"/>
            </actionGroup>

            <actionGroup ref="SetProductColorAndSizeAndQuantityOptions" stepKey="addProductToCartWithColorAndSizeAndQuantityOptions1"/>


            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad"/>

            <actionGroup ref="AddToCart" stepKey="addToCart1"/>

            <actionGroup ref="GoToProductDetailsPage" stepKey="goToProductDetailsPage1">
                <argument name="product" value="CarminaEarrings"/>
            </actionGroup>

            <actionGroup ref="AddToCart" stepKey="addToCart2">
                <argument name="product" value="CarminaEarrings"/>
            </actionGroup>

            <actionGroup ref="GoToProductDetailsPage" stepKey="goToProductDetailsPage2">
                <argument name="product" value="AugustaEarrings"/>
            </actionGroup>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad1"/>

            <actionGroup ref="AddToCart" stepKey="addToCart3">
                <argument name="product" value="AugustaEarrings"/>
            </actionGroup>

            <actionGroup ref="TemporaryWait5" stepKey="waitForElementToLoad5"/>

            <actionGroup ref="ProceedToCheckout" stepKey="ProceedToCheckout1"/>

            <actionGroup ref="AddShippingDetails" stepKey="addshippingdetails">
                <argument name="customer" value="VeniaCustomer1"/>
            </actionGroup>
            <actionGroup ref="SaveAndVerifyShippingDetails" stepKey="saveandverifyshippingdetails">
                <argument name="customer" value="VeniaCustomer1"/>
            </actionGroup>

            <click selector="{{VeniaShoppingCartDetailsSection.addBillingInformation}}" stepKey="clickOnAddBillingInformation01"/>

            <actionGroup ref="TemporaryWait3" stepKey="waitForElementToLoad2"/>

            <actionGroup ref="EnterCardDetails" stepKey="enterCreditCardDetails"/>

            <actionGroup ref="SubmitPayment" stepKey="submitPaymentMethod"/>

            <actionGroup ref="AddGetItByShippingInformationViaTheShoppingCart" stepKey="addGetItByShippingInformationViaTheShoppingCart1">
                <argument name="shippingMethodName" value="Flat Rate"/>
            </actionGroup>

        </before>

        <actionGroup ref="ConfirmOrderRegisteredUser" stepKey="clickCOnfirmOrderButton"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartSection.close}}" stepKey="wait10"/>
        <wait time="2" stepKey="temporarywait11"/>
        <click selector="{{VeniaShoppingCartSection.close}}" stepKey="clickOnCloseIconOfCart"/>
        <wait time="2" stepKey="temporarywait12"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.navTrigger}}" stepKey="wait1"/>
        <click selector="{{VeniaMainMenuSection.navTrigger}}" stepKey="expandNav"/>
        <actionGroup ref="GoToSignOutForm" stepKey="goToSignOutForm"/>
        <actionGroup ref="SignOut" stepKey="signOutFromTheAccount"/>

    </test>
</tests>
